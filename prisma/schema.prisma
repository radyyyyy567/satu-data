// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique  
  password      String
  role          String
  verification  Boolean   @default(true)
  datapost      DataPost[] 
  bookpost      BookPost[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model DataPost {
  id            String @id @default(uuid())
  title         String @unique 
  description   String
  filename      String
  category      String
  publish       DateTime?
  archive       Boolean @default(true)
  linkdrive     String? 
  uploader      User @relation(fields: [uploaderId], references: [id])
  uploaderId    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model BookPost {
  id            String @id @default(uuid())
  title         String @unique 
  description   String?
  filename      String?
  category      String?
  year          Int?
  archive       Boolean? @default(true)
  linkdrive     String? 
  uploader      User @relation(fields: [uploaderId], references: [id])
  uploaderId    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

